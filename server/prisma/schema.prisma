// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STAFF
  MANAGER
  ADMIN
}

enum DayType {
  REGULAR
  SICK
  VACATION
  PERSONAL
  HOLIDAY
  SNOW_DAY
  PROFESSIONAL_DEVELOPMENT
  BEREAVEMENT
  JURY_DUTY
  UNPAID
}

enum TimeOffType {
  SICK
  VACATION
  PERSONAL
  BEREAVEMENT
  JURY_DUTY
  UNPAID
  PROFESSIONAL_DEVELOPMENT
}

enum RequestStatus {
  PENDING
  APPROVED
  DENIED
}

enum TimeCardStatus {
  DRAFT
  SUBMITTED
  APPROVED
  REJECTED
}

model User {
  id                String           @id @default(cuid())
  email             String           @unique
  firstName         String
  lastName          String
  employeeId        String           @unique
  passwordHash      String
  role              Role             @default(STAFF)
  department        String?
  position          String?
  hireDate          DateTime?
  isActive          Boolean          @default(true)
  managerId         String?
  manager           User?            @relation("ManagerEmployee", fields: [managerId], references: [id])
  directReports     User[]           @relation("ManagerEmployee")
  resetToken        String?
  resetTokenExpiry  DateTime?
  lastLogin         DateTime?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  // Relations
  timeCards         TimeCard[]
  timeOffRequests   TimeOffRequest[] @relation("RequestEmployee")
  approvedRequests  TimeOffRequest[] @relation("ApprovalManager")
  notifications     Notification[]
  calendarEvents    CalendarEvent[]

  @@map("users")
}

model CalendarEvent {
  id          String    @id @default(cuid())
  title       String
  description String?
  date        DateTime
  dayType     DayType
  isRecurring Boolean   @default(false)
  recurrenceRule String?
  createdById String
  createdBy   User      @relation(fields: [createdById], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("calendar_events")
}

model TimeCard {
  id          String          @id @default(cuid())
  employeeId  String
  employee    User            @relation(fields: [employeeId], references: [id])
  periodStart DateTime
  periodEnd   DateTime
  status      TimeCardStatus  @default(DRAFT)
  submittedAt DateTime?
  approvedAt  DateTime?
  approvedBy  String?
  comments    String?
  totalHours  Float           @default(0)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  // Relations
  timeEntries TimeEntry[]

  @@map("time_cards")
}

model TimeEntry {
  id         String    @id @default(cuid())
  timeCardId String
  timeCard   TimeCard  @relation(fields: [timeCardId], references: [id], onDelete: Cascade)
  date       DateTime
  dayType    DayType   @default(REGULAR)
  timeIn     DateTime?
  timeOut    DateTime?
  breakTime  Int       @default(0) // minutes
  hours      Float     @default(0)
  notes      String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("time_entries")
}

model TimeOffRequest {
  id          String        @id @default(cuid())
  employeeId  String
  employee    User          @relation("RequestEmployee", fields: [employeeId], references: [id])
  type        TimeOffType
  startDate   DateTime
  endDate     DateTime
  hours       Float?
  reason      String?
  status      RequestStatus @default(PENDING)
  submittedAt DateTime      @default(now())
  reviewedAt  DateTime?
  reviewedBy  String?
  reviewer    User?         @relation("ApprovalManager", fields: [reviewedBy], references: [id])
  comments    String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("time_off_requests")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  isRead    Boolean  @default(false)
  type      String   // 'timecard', 'timeoff', 'calendar', 'system'
  relatedId String?  // ID of related record
  createdAt DateTime @default(now())

  @@map("notifications")
}

model SystemSettings {
  id                    String @id @default(cuid())
  payPeriodStartDay     Int    @default(1) // 1=Monday, 7=Sunday
  payPeriodLength       Int    @default(14) // days
  defaultWorkHours      Float  @default(8.0)
  timeCardReminderDays  Int    @default(2)
  autoApprovalEnabled   Boolean @default(false)
  emailNotifications    Boolean @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@map("system_settings")
}